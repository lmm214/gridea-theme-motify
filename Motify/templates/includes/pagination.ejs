          <% if (pagination.prev || pagination.next) { %>
            <div class="paginator pager pagination">
              <div class="nav">
                <% if (pagination.prev) { %>
                  <a href="<%= pagination.prev %>" class="prev button red">上一页</a>
                <% } %>
                <% if (pagination.next) { %>
                  <a href="<%= pagination.next %>" class="next button red">下一页</a>
                <% } %>
                <div class="clear"></div>
              </div>
            </div>
          <% } %>